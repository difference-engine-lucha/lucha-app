<div ng-app="app">
	<div ng-controller="budgetCtrl" ng-init="init()">
		<div id="budget-alert">
			<div class="alert alert-dismissible" role="alert">
				<button type="button" class="close" ng-click="closeAlert()" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<p id="flashText">{{response}}</p>
			</div>
		</div>
			<h1><%= I18n.t "budget_show.title" %><%= @client.full_name %><br>
			<small><%= I18n.t "budget_show.description" %>
			<%= I18n.t "budget_show.debts_description" %></small></h1>
		<hr>
			<div class="row">
				<div class="col-md-4">
					<div class="panel panel-success">
						<div class="panel-heading">
							<h3 class="panel-title"><%= I18n.t "budget_show.income" %></h3>
						</div>
						<div class="panel-body">
							<%= render "budget_income" %>
						</div>
					</div>
				</div>
				<div class="col-md-4">
					<div class="panel panel-success">
						<div class="panel-heading">
							<h3 class="panel-title"><%= I18n.t "budget_show.debts" %></h3>
						</div>
						<div class="panel-body">
							<%= render "budget_debts" %>
						</div>
					</div>
				</div>
				<div class="col-md-4">
					<div class="panel panel-success">
						<div class="panel-heading">
							<h3 class="panel-title"><%= I18n.t "budget_show.assets" %></h3>
						</div>
						<div class="panel-body">
							<%= render "budget_assets" %>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="panel panel-success">
						<div class="panel-heading">
							<h3 class="panel-title">Totals</h3>
						</div>
						<div class="panel-body">
							<%= render "budget_totals" %>
						</div>
					</div>
				</div>
			</div>


		<hr>
		<button class="btn btn btn-primary" ng-click="submitData(budget)"><%= I18n.t "budget_debts.update" %></button>
	</div>
</div>
