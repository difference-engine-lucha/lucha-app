<div class="devise">
  <div class="content">
    <ul class="nav navbar-nav navbar-right">
      <li class="navbar-text"><%= render "layouts/language"   %></li>
    </ul>
    <%= image_tag("lucha_logo-03-sm.png") %>
      <h1>
        Employee Sign Up <br />
        <small>          
          <%= I18n.t "employee_sign_up.please_fill_in"%>      
        </small>
      </h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :class => "form-horizontal", role: "form"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= I18n.t "employee_sign_up.first_name" %>
        <span class="text-danger"> * </span>
        <%= f.text_field :first_name, autofocus: true, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= I18n.t "employee_sign_up.last_name" %>
        <span class="text-danger"> * </span>
        <%= f.text_field :last_name, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= I18n.t "employee_sign_up.home_phone" %>
        <%=f.text_field :home_phone, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= I18n.t "employee_sign_up.cell_phone" %>
        <%=f.text_field :cell_phone, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= I18n.t "employee_sign_up.work_phone" %>
        <%=f.text_field :work_phone, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= I18n.t "employee_sign_up.position" %>
        <%=f.text_field :position, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= I18n.t "employee_sign_up.address" %>
        <span class="text-danger"> * </span>
        <%= select_tag(:address, options_for_select(employee_address, nil), :prompt => "Please Select", :class => "form-control") %>
      </div>

      <hr>

      <h1>
        <small>
          <%= I18n.t "employee_sign_up.login_information" %>
        </small>
      </h1>

      <div class="form-group">
        <%= I18n.t "employee_sign_up.email" %>
        <span class="text-danger"> * </span>
        <%= f.email_field :email, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= I18n.t "employee_sign_up.password" %>
        <span class="text-danger"> * </span>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= I18n.t "employee_sign_up.password_confirmation" %>
        <span class="text-danger"> * </span>
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= I18n.t "employee_sign_up.remember_me" %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Sign up", :class => 'btn btn-large btn-primary' %>
      </div>
    <% end %>

    <hr>

    <h5><%= I18n.t "employee_sign_up.already_have_account" %><%= link_to "Log In", "/users/sign_in" %></h5>
  </div>
</div>
