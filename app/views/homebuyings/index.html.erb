<h1>Homebuying Clients
  <br>
  <small> 
    This is a list of all the homebuying applicants
  </small>
</h1>
<hr>
<div class="form-group pull-right">
  <input type="text" class="search form-control" placeholder="Search on this page">
</div>
<span class="counter pull-left"></span>
<table class="table table-hover results">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Home Phone</th>
      <th>Address</th>
      <th>Contact for Appointment</th>
      <th>Realtor's Name</th>
      <th>Date Created</th>
      <th>View</th> 
    </tr>    
  <tr class="warning no-result">
    <td colspan="8">
      <i class="fa fa-warning"></i> No results
    </td>
  </tr>
  </thead>
<% @homebuyings.each do |homebuying| %>
 <tbody>
   <tr>
     <td>
       <%= homebuying.client.id %>
     </td>
     <td>
       <%= link_to(homebuying.client.full_name.titleize, client_path(homebuying.client.id)) %>
     </td>
     <td>
       <%= number_to_phone(homebuying.client.home_phone, pattern: /(\d{1,4})(\d{4})(\d{4})$/, area_code: true) %>
     </td>
     <td>
       <%= homebuying.client.address %>, <%= homebuying.client.city %>, <%= homebuying.client.state %>
     </td>
     <td>
        <% if homebuying.contact_for_appointment== false %>
          <%= "No" %>
        <% else %>
          <%= "Yes" %>
        <% end %>
     </td>
     <td>
       <%= homebuying.realtor_name %>
     </td>
     <td>
       <%= homebuying.pretty_time %>
     </td>
     <td>
       <%= link_to "View", homebuying_path(homebuying.id), :class => "btn btn-sm btn-primary" %>
     </td>
   </tr>
 </tbody>
<% end %>
</table>
<hr>
<p>
  Download:
  <%= link_to "CSV", homebuyings_path(format: "csv") %> |
  <%= link_to "Excel", homebuyings_path(format: "xls") %>
  </div>
</p>