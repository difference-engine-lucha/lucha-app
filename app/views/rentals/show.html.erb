<h1><%= I18n.t "rental.application" %></h1>
<hr>
<div class="panel panel-success">
  <div class="panel-heading">
  	<h3 class="panel-title">
		<%= I18n.t "rental.information" %>
		<strong class="text-warning"><%= @rental.client.full_name %></strong> on
		<strong class="text-warning"><%= @rental.pretty_time %></strong>
	</h3>
  </div>

  <div class="panel-body">
    <table class="table table-hover">
	    <%= render "rental" %>
	</table>
	</div>
		
</div>
<hr>

<%= link_to I18n.t("rental.edit_application"), "/rentals/#{@rental.id}/edit", :class => "btn btn-warning", method: :get %>
<%= link_to I18n.t("rental.delete_application"), "/rentals/#{@rental.id}", method: :delete, data:{confirm: "Are you sure you want to delete this rental application?"}, :class => "btn btn-danger" %>
