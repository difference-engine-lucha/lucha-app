<div class="devise center-block">
  <div class="content">
    <ul class="nav navbar-nav navbar-right">
      <li class="navbar-text">
        <p>
          <%= link_to_unless_current "English", "/clients/sign_in?locale=en" %> | 
          <%= link_to_unless_current "EspaÃ±ol", "/clients/sign_in?locale=es" %>
        </p>
      </li>
    </ul>

    <h1><%= t(".change_your_password", :default => "Change your password") %></h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

      <div class="form-group field">
        <div class="input">
          <%= t(".new_password", :default => "New password") %><br />
          <%= t(".eight_characters_minimum", :default => "(8 characters minimum)") %><br />          
          <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "form-control" %>
        </div>
      </div>

      <div class="form-group field">
        <div class="input">
          <%= t(".confirm_new_password", :default => "Confirm new password") %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit t(".change_my_password", :default => "Change my password"), :class => "btn btn-primary" %>
      </div>
    <% end %>

    <hr>

    <div class="sign-in-footer">
      <h5 class="devise-links pull-left">
      <%= render "devise/shared/links" %>
      </h5>
    </div>

  </div>
</div>
